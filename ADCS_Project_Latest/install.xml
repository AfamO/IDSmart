<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">
- <!-- 
        The info section.
        The meaning of the tags should be natural ...
  --> 
- <info>
  <appname>PersIDFupre Installation</appname> 
  <appversion>1.0 beta 419</appversion> 
- <authors>
  <author name="AfamO" email="afamsimon@gmail.com" /> 
  <author name="CharlesA" email="chuksman@hisdomain.com" /> 
  </authors>
  <url>http://www.snosfortess.com/</url> 
  </info>
- <!-- 
 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    

  --> 
  <guiprefs width="640" height="480" resizable="yes" /> 
- <!-- 
 
        The locale section.
        Asks here to include the English and French langpacks.
    

  --> 
- <locale>
  <langpack iso3="eng" /> 
  <langpack iso3="fra" /> 
  <langpack iso3="spa" />
  
  </locale>
- <!-- 
 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    

  --> 
- <resources>
  <res id="LicencePanel.licence" src="Licence.txt" /> 
  <res id="InfoPanel.info" src="README.txt" /> 
  <res src="C:\Users\fupre1\Documents\IzPack\bin\default_shortcut_specification.xml"
     id="shortcutSpec.xml"/>

  </resources>
- <!-- 
 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    

  --> 
- <panels>
  <panel classname="HelloPanel" /> 
  <panel classname="InfoPanel" /> 
  <panel classname="LicencePanel" /> 
  <panel classname="TargetPanel" /> 
  <panel classname="PacksPanel" /> 
  <panel classname="InstallPanel" /> 
  <panel classname="FinishPanel" />
  <panel classname="ShortcutPanel" /> 
  </panels>
- <!-- ShortcutPanel
 
        The packs section.
        We specify here our packs.
    

  --> 
- <packs>
- <pack name="Sources" required="no">
  <description>The sources</description> 
  <file src="src" targetdir="$INSTALL_PATH" /> 
  </pack>
   <pack name="JarFile" required="yes">
  <description>Dist/Jar File</description> 
  <file src="dist" targetdir="$INSTALL_PATH" /> 
  </pack>
  <pack name="Libraries/API" required="yes">
  <description>Required Libraries/API</description> 
  <file src="API" targetdir="$INSTALL_PATH" /> 
  </pack>
  </packs>
  
  <shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="FuprePersID\PersId"
                location="startMenu"/>
  <shortcut
    name="FupRePersId Shortcut"
    target="$INSTALL_PATH\dist\ADCS_Project.jar"
    commandLine=""
    workingDirectory=" "
    description="This is a shortcut that starts MyApplication"
    iconFile="$INSTALL_PATH\bin\icons\log3.png"
    iconIndex="0"
    type="Application"
    encoding="UTF-8"
     terminal="true"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="yes"
    startup="no">
    <createForPack name="Core"/>
  </shortcut>
</shortcuts>

  
  <!-- The native libraries to add. This is required for creating shortcuts on Windows -->
          <native type="izpack" name="ShellLink.dll"/>

  </installation>
